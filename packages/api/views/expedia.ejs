<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="utf-8" />

    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet" />
    <style>
    /* This css is for PDF Template */

    @page {
      margin: 30px;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    p,
    li {
      font-size: 0.8rem;
      margin-bottom: 5px;
    }

    body {
      font-family: 'Roboto', sans-serif;
      box-sizing: border-box;
    }

    .root {
      width: 21cm;
      padding: 0 50px;
    }

    .frame {
      border: 1px solid lightgray;
      padding: 10px;
    }

    .logo {
      width: 200px;
    }

    .flex-between {
      display: flex;
      justify-content: space-between;
    }
    </style>
  </head>

  <body>
    <div class="root">
      <!-- Logo -->
      <%- include ('./expediaLogo'); -%>

      <!-- Header -->
      <%- include ('expediaHeader', {flight, month, itinerary}); %>

      <!-- Important Information -->
      <%- include ('expediaImportantInformation'); %>

      <!-- Flightdata Header -->
      <%- include ('expediaFlightDataHeader', {flight, month, passengers}); %>

      <div style="display: flex;">
        <div style="margin-right: 10px; width: 1000px;">
          <!-- Flightdata Traveler Information-->
          <%- include ('expediaFlightDataTravelerInformation', { passengers }); %>

          <!-- Flightdata Flight Information-->
          <%- include ('expediaFlightDataFlightInformation', {flight, month}); %>
        </div>
        <div>
          <!-- Price Summary -->
          <%- include ('expediaPriceSummary', {flight, passengers}); %>

          <!-- Additional Flight Services -->
          <%- include ('expediaAdditionalFlightServices'); %>
        </div>
      </div>

      <!-- Airline Rules -->
      <%- include ('expediaAirlineRules'); %>

      <!-- Need help with your reservation? -->
      <%- include ('expediaNeedHelp', {itinerary}); %>
    </div>
  </body>
</html>
